  "start_url": "/",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui"],
  "shortcuts": [
    {
      "name": "Start Plant Tour",
      "short_name": "Tour",
      "description": "Begin a new plant tour",
      "url": "/?action=start-tour",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Code Verification",
      "short_name": "Code",
      "description": "Verify product codes",
      "url": "/?action=code-verification",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Net Weight Monitoring",
      "short_name": "Weight",
      "description": "Monitor net weight records",
      "url": "/?action=net-weight",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Product Monitoring",
      "short_name": "Product",
      "description": "Monitor product quality",
      "url": "/?action=product-monitoring",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "ALC Records",
      "short_name": "ALC",
      "description": "Access ALC verification records",
      "url": "/?action=alc-records",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/?action=open-file",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/json": [".json"],
        "text/xml": [".xml"],
        "application/xml": [".xml"],
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"],
        "image/gif": [".gif"],
        "image/webp": [".webp"]
      }
    },
    {
      "action": "/?action=import-data",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/json": [".json"]
      }
    },
    {
      "action": "/?action=view-document",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "text/xml": [".xml"],
        "application/xml": [".xml"]
      }
    },
    {
      "action": "/?action=view-image",
      "accept": {
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"],
        "image/gif": [".gif"],
        "image/webp": [".webp"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "note_taking": {
    "new_note_url": "/?action=new-note",
    "note_url": "/?action=view-note&id={id}"
  },
  "share_target": {
    "action": "/?action=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/csv", "application/pdf", "text/plain", "application/json"]
        }
      ]
    }
  },
